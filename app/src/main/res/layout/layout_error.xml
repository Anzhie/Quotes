<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutError"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="@dimen/defaultPadding">

    <TextView
        style="@style/TextErrorMedium"
        android:gravity="center"
        android:id="@+id/textViewError"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/error_text"
        app:layout_constraintBottom_toTopOf="@id/buttonSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/defaultPadding"
        android:layout_width="wrap_content"
        android:text="@string/error_button_settings"
        android:theme="@style/ButtonError"
        app:layout_constraintBottom_toTopOf="@id/buttonError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewError" />

    <Button
        android:id="@+id/buttonError"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/defaultPadding"
        android:layout_width="wrap_content"
        android:text="@string/error_button_text"
        android:theme="@style/ButtonError"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSettings" />

</androidx.constraintlayout.widget.ConstraintLayout>